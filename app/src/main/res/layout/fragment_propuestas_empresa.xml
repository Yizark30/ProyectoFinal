<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PropuestasEmpresa">

    <View
        android:id="@+id/VwVista"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/nombre_app_ek2_shape"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <RelativeLayout
        android:id="@+id/group_5_ek1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="650dp"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/rectangle_6_ek4"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_6_ek4_shape" />

        <ImageView
            android:id="@+id/ImgHome"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="5dp"
            android:contentDescription="image_6_ek2"
            android:src="@drawable/image_6_ek2" />

        <ImageView
            android:id="@+id/ImgUsuario"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="_avatar_1_ek2"
            android:src="@drawable/_avatar_1_ek2" />

        <ImageView
            android:id="@+id/ImgCorreo"
            android:layout_width="78dp"
            android:layout_height="63dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="5dp"

            android:contentDescription="_image_5_ek3"
            android:src="@drawable/_image_5_ek3" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvPropuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>