<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OfertasPropuestas">

    <TextView
        android:id="@+id/tvOfertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:text="Ofertas Propuestas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/vista_de_respuestas_color"
        android:textSize="40dp"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/ImgNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/_boton_agregar_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvOfertas"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/group_5_ek1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="670dp">

            <View
                android:id="@+id/rectangle_6_ek4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_6_ek4_shape" />

            <ImageView
                android:id="@+id/image_6_ek2"
                android:layout_width="68dp"
                android:layout_height="63dp"
                android:layout_marginStart="175dp"
                android:layout_marginTop="5dp"
                android:contentDescription="image_6_ek2"
                android:src="@drawable/image_6_ek2" />

            <ImageView
                android:id="@+id/_avatar_1_ek2"
                android:layout_width="61dp"
                android:layout_height="64dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:contentDescription="_avatar_1_ek2"
                android:src="@drawable/_avatar_1_ek2" />

            <ImageView
                android:id="@+id/_image_5_ek3"
                android:layout_width="68dp"
                android:layout_height="63dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="5dp"
                android:contentDescription="_image_5_ek3"
                android:src="@drawable/_image_5_ek3" />

        </RelativeLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOfertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="280dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>